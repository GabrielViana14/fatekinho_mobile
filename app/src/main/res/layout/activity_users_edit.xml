<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_black"
    android:fitsSystemWindows="true"
    tools:context=".UsersEditActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/radial_chart"
        android:orientation="horizontal"
        android:gravity="start|center"
        android:padding="20dp">
        <ImageButton
            android:id="@+id/users_edit_btn_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:background="@android:color/transparent"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar/Editar Usu치rio"
            android:textColor="@color/white"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail do usu치rio"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="20dp">
            <EditText
                android:id="@+id/users_edit_txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insira o E-mail"
                android:paddingStart="10dp"
                android:textSize="18sp"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha do usu치rio"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="20dp">
            <EditText
                android:id="@+id/users_edit_txt_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insira a senha"
                android:paddingStart="10dp"
                android:textSize="18sp"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo do usu치rio"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="20dp">
            <EditText
                android:id="@+id/users_edit_txt_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insira o tipo"
                android:paddingStart="10dp"
                android:textSize="18sp"
                />
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/users_edit_btn_confirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:textSize="20sp"
            android:backgroundTint="@color/red"/>

    </LinearLayout>
</LinearLayout>